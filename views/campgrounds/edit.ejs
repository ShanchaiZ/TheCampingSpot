<% layout ("layouts/boilerplate") %> 
    <h1>Edit A Campground!</h1>
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %> " placeholder="Enter Campground Title!">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %> " placeholder="Enter Campground Location!">
        </div>
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>